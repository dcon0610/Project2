<!-- this will contain the content of the <body> of the main page, such as the place where the forms and coffee review panels will go -->

<!-- if we want, we can further split out the review panes into their own template via Partials: https://handlebarsjs.com/guide/partials.html -->

<header class="header"> <!-- header area -->
    <h1>
        <span><img src="./assets/img/coffee_icon.png" alt="coffee logo"></span> Coffee Rater
    </h1>
</header>
<div class="container-fluid">
    <div class="row">
        <main class="col-9"><!-- main content area -->
            <p>To see individual reviews, click to expand on a coffee.</p>
            <span>
                <label>Filter by brand:</label>
                <select id="filterByBrand">
                {{#each brand }}
                 <option> {{value}} </option> 
                {{/each}}
                </select>
            </span>
            <span><button id="reset" class="btn btn-custom">reset page</button></span>
            <ul class="list-group">
                {{#each coffee}}
                    {{> coffee/coffee_card}}
                {{/each}}                   
            </ul>
        </main>

        <!-- side bar -->
        <aside class="col-3 sticky-top" id="newCoffeePanel">
            <h5>Add a coffee</h5>
            <hr>
            <form> <!-- form for submitting a coffee for review -->
                <div class="form-group">

                    <label for="formNameInput">Name of Blend:</label>
                    <input type="text" name="name" id="formNameInput" class="form-control">
                </div>
                <div class="form-group">
                    <label for="formBrandInput">Brand:</label>
                    <input type="text" name="brand" id="formBrandInput" class="form-control">
                </div>
                <div class="form-group">
                    <label for="formDescriptionInput">Description:</label>
                    <textarea name="description" id="formDescriptionInput" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label for="formPriceInput">Price:</label>
                    <input type="number" min="0" name="price" id="formPriceInput" class="form-control">
                    <label for="formGramsInput">Grams:</label>
                    <input type="number" min="0" name="grams" id="formGramsInput" class="form-control">
                </div>
                   <div class="form-group">
                    <label for="formImgInput">upload image:</label>
                    <input type="file" name="img" id="formImgInput" accept="image/*">
                </div>
                <button type="submit" class="btn btn-custom" id="coffeeSubmitBtn">Submit Coffee</button>

            </form>
        </aside>

    </div>
</div>